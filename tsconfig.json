{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "allowJs": true,
    "noEmit": true,
    "checkJs": true,
    "esModuleInterop": true, // default インポートがないCommonJSモジュールをES6形式でインポートできるようにする
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
    /* Linting */
    // "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "emitDecoratorMetadata": true
  },
  "include": ["bin"],
  "exclude": [
    "node_modules" // コンパイルから除外するディレクトリ
  ]
}
