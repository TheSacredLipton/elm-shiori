{
  "name": "elm-shiori",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheSacredLipton/elm-shiori.git"
  },
  "keywords": [
    "elm-shiori",
    "shiori"
  ],
  "author": "TheSacredLipton",
  "version": "0.3.0",
  "description": "Elm UI Viewer",
  "license": "MIT",
  "bin": {
    "shiori": "bin/shiori.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.12.7",
    "@types/serve-handler": "^6.1.4",
    "@types/ws": "^8.5.10",
    "@types/yargs": "^17.0.32",
    "chokidar-cli": "^3.0.0",
    "elm": "0.19.1-6",
    "elm-test": "0.19.1-revision10",
    "elm-verify-examples": "^5.3.0",
    "nodemon": "^2.0.22",
    "run-pty": "^4.1.0",
    "serve-handler": "^6.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "elm-codegen": "^0.2.0",
    "fs-extra": "^10.1.0",
    "immer": "^9.0.21",
    "kleur": "^4.1.5",
    "node-elm-compiler": "^5.0.6",
    "serve": "^14.2.1",
    "ws": "^8.16.0",
    "yargs": "^17.7.2"
  },
  "scripts": {
    "start": "nodemon --watch bin -x \"node bin/shiori serve\"",
    "install": "elm-codegen install",
    "build": "node bin/shiori build",
    "test:watch": "elm-test && run-pty % chokidar \"codegen/**/*.elm\" -c \"elm-verify-examples && elm-test\" % chokidar \"tests/*.elm\" -c \"elm-test\"",
    "test": "biome ci . && tsc && elm-verify-examples && elm-test"
  }
}
