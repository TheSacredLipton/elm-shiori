{
  "name": "elm-shiori",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheSacredLipton/elm-shiori.git"
  },
  "keywords": ["elm-shiori", "shiori"],
  "author": "TheSacredLipton",
  "version": "0.4.0",
  "description": "Elm UI Viewer",
  "license": "MIT",
  "bin": {
    "shiori": "bin/shiori.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.0",
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.12.7",
    "@types/yargs": "^17.0.32",
    "bun-types": "latest",
    "chokidar-cli": "^3.0.0",
    "elm": "0.19.1-6",
    "elm-test": "0.19.1-revision10",
    "elm-verify-examples": "^5.3.0",
    "run-pty": "^4.1.0"
  },
  "dependencies": {
    "@elysiajs/static": "^1.0.3",
    "chokidar": "^3.6.0",
    "elm-codegen": "^0.2.0",
    "elysia": "^1.0.16",
    "fs-extra": "^10.1.0",
    "immer": "^9.0.21",
    "kleur": "^4.1.5",
    "node-elm-compiler": "^5.0.6",
    "yargs": "^17.7.2"
  },
  "scripts": {
    "start": "bun --watch bin/shiori.ts serve",
    "install": "elm-codegen install",
    "build": "bun bin/shiori.ts build",
    "test:watch": "elm-test && run-pty % chokidar \"codegen/**/*.elm\" -c \"elm-verify-examples && elm-test\" % chokidar \"tests/*.elm\" -c \"elm-test\"",
    "test": "biome ci . && elm-verify-examples && elm-test",
    "biome-apply": "biome check . --apply",
    "npm-publish": "bun run test && npm publish"
  },
  "module": "index.ts",
  "type": "module",
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
